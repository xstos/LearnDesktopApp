<UserControl x:Class="AvaloniaApplication1.Views.MainView" xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ia="using:Avalonia.Xaml.Interactions.Core" xmlns:local="using:AvaloniaApplication1"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:v="using:AvaloniaApplication1.Views"
             xmlns:vm="using:AvaloniaApplication1.ViewModels" d:DesignHeight="450"
             d:DesignWidth="800" x:DataType="vm:MainViewModel"
             mc:Ignorable="d">

    <TabControl Margin="5"
                ItemsSource="{Binding Tabs}"
                SelectedValue="{Binding SelectedTabValue, Mode=OneWayToSource}"
                TabStripPlacement="Bottom">
        <TabControl.ItemTemplate>
            <DataTemplate DataType="vm:TabItemViewModel">
                <StackPanel Orientation="Vertical">
                    <TextBlock>Icon</TextBlock>
                    <TextBlock Text="{Binding Header}" />
                </StackPanel>
            </DataTemplate>
        </TabControl.ItemTemplate>

        <TabControl.ContentTemplate>
            <DataTemplate DataType="vm:TabItemViewModel">
                <ContentControl Content="{Binding Content}" />
            </DataTemplate>
        </TabControl.ContentTemplate>

    </TabControl>

</UserControl>
